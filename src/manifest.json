{
	"name": "QR Extension",
	"short_name": "QR Extension",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"page_action": {
		"default_title": "URL to QR"
	},
	"permissions": [
		"contextMenus",
		"topSites",
		"activeTab"
	],
	"icons": {
		"16": "static/icons/icon-16.png",
		"24": "static/icons/icon-24.png",
		"19": "static/icons/icon-19.png",
		"32": "static/icons/icon-32.png",
		"38": "static/icons/icon-38.png",
		"48": "static/icons/icon-48.png",
		"128": "static/icons/icon-128.png"
	},
	"omnibox": {
		"keyword": "qr"
	}
}